<h1><%= pluralize(@posts.size, 'Post') %></h1>

<!-- Rails is just a gem -->

<% @posts.each do |post|%>
  <div class="card">
    <%# image_for(post) %> <!-- parameter is post object -->
    <h2><%= link_to(post.name, post) %></h2>
    <!-- post_path() is a helper method generated by the routes file indirectly -->
    <!-- rails is generating methods for these path helpers -->
    <p><%= post.textfield %></p>
    <h4><%= post.category %></h4>
    <h4><%= post.date_published %></h4>
  </div>
<% end %>
